{
    "name": "catpaw/libsdl",
    "type": "project",
    "description": "Tools and stubs for libsdl GUI library in Linux (and maybe Windows?)",
    "homepage": "https://github.com/tncrazvan/catpaw-libsdl",
    "license": "MIT",
    "scripts": {
        "load": "XDEBUG_MODE=off composer dump-autoload -o",
        "fix": [
            "XDEBUG_MODE=off php ./vendor/bin/php-cs-fixer fix src",
            "XDEBUG_MODE=off php ./vendor/bin/php-cs-fixer fix tests"
        ],
        "action:test": [],
        "test": [],
        "start": "XDEBUG_MODE=debug php ./bin/start -e./src/main.php -l./src/lib/ -i",
        "watch": "XDEBUG_MODE=debug php ./bin/start -e./src/main.php -l./src/lib/ -r./resources/ -i -w",
        "build": "XDEBUG_MODE=off php -dphar.readonly=0 ./product.phar --build-config --build",
        "post-autoload-dump": [
            "[ ! -f product.phar ] && wget https://github.com/tncrazvan/catpaw-dev-tools/releases/download/0.4.76/product.phar || echo \"product.phar found.\n\""
        ]
    },
    "authors": [
        {
            "name": "Razvan Tanase",
            "email": "tangent.jotey@gmail.com",
            "homepage": "https://github.com/tncrazvan",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "CatPaw\\SDL\\": "src/lib/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "require": {
        "php": "^8.1",
        "catpaw/core": "^0.4",
        "amphp/amp": "^2.6",
        "amphp/file": "^2.0",
        "ext-sdl": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^4.23",
        "overtrue/phplint": "^5.3"
    },
    "config": {
        "preferred-install": "dist",
        "process-timeout": 0
    }
}